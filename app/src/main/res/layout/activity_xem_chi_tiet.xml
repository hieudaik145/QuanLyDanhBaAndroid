<?xml version="1.0" encoding="utf-8"?>
<TableLayout android:layout_height="match_parent" android:layout_width="match_parent"
    android:orientation="vertical"
    android:shrinkColumns="*"
    android:stretchColumns="1,2"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <TableRow android:background="#10100d">
        <TextView android:text="Xem Chi Tiết"
            android:textSize="25dp"
            android:textColor="#ffff"
            android:layout_gravity="center"
            android:layout_span="2"/>
    </TableRow>
    <TableRow>
        <TextView android:text="ID: "/>
        <EditText android:id="@+id/editid"/>
    </TableRow>

    <TableRow>
        <TextView android:text="Ho Ten: "/>
        <EditText android:id="@+id/edithotensua"/>
    </TableRow>
    <TableRow>
        <TextView android:text="Số đt: "/>
        <EditText android:id="@+id/editsdtsua"/>
    </TableRow>
    <TableRow>
        <TextView android:text="Ngày Sinh"/>
        <EditText android:id="@+id/editngaysinhmoi" />
    </TableRow>
    <TableRow>
        <RadioGroup android:orientation="horizontal" android:layout_span="2">

            <RadioButton
                android:id="@+id/rbnammoi"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="Nam" />

            <RadioButton
                android:id="@+id/rbnumoi"
                android:layout_width="221dp"
                android:layout_height="wrap_content"
                android:text="Nữ" />
        </RadioGroup>
    </TableRow>
    <TableRow>

        <Button
            android:id="@+id/btntrove"
            android:layout_width="161dp"
            android:text="Trở Về" />
        <Button android:id="@+id/btnsuamoi" android:text="Sửa"/>
    </TableRow>

</TableLayout>